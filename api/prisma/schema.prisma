generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}


model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  orders    Order[]  // No onDelete here
  reviews   Review[] // No onDelete here
}

model Seller {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  shopName   String
  email      String   @unique
  password   String
  isVerified Boolean  @default(false)
  admin      Boolean  @default(false)
  products   Product[]  // No onDelete here
  createdAt  DateTime @default(now())
  orders     Order[]   // No onDelete here
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  stock       Int @default(0)
  image       String
  category    String
  sellerId    String   @db.ObjectId
  seller      Seller   @relation(fields: [sellerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]  // No onDelete here
  reviews     Review[] // No onDelete here
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String   @db.ObjectId
  sellerId    String   @db.ObjectId
  productId   String   @db.ObjectId
  quantity    Int      @default(1)
  status      String   @default("pending")
  address     String 
  total       Float
  createdAt   DateTime @default(now())
  title       String
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)  // Cascade here
  seller      Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)    // Cascade here
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)   // Cascade here
}

model Review {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  comment       String
  createdAt     DateTime @default(now())
  customerName  String
  customerId    String
  productId     String
  customer      Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)  // Cascade here
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)   // Cascade here
}
